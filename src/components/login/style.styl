@import '../../utils/mixins.styl';

$imagePath = '../../../dist/images/';

.login-logo-container {
    padding-top: 20px;
    text-align: center;
}

.login-logo {
    width: 40.81%;
}

.login-button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.login-button {
    background($imagePath + 'button.png', 0.25);
    font-family: Helvetica, Arial, sans-serif;
    font-size: 45px;
    font-weight: 500;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: center;
}
